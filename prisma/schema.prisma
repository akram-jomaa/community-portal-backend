// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          Int          @id @default(autoincrement())
  publicId    String       @unique @default(uuid()) @db.Uuid
  name        String       @db.VarChar(255)
  users       User[]
  prayerTimes PrayerTime[]
}

model UserType {
  id       Int    @id @default(autoincrement())
  publicId String @unique @default(uuid()) @db.Uuid
  name     String @db.VarChar(127)
  users    User[]
}

model User {
  id             Int          @id @default(autoincrement())
  publicId       String       @unique @default(uuid()) @db.Uuid
  firstName      String       @db.VarChar(255)
  lastName       String       @db.VarChar(255)
  username       String       @db.VarChar(255)
  email          String       @unique
  phoneNumber    String       @db.VarChar(16)
  userType       UserType     @relation(fields: [userTypeId], references: [id])
  userTypeId     Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int

  @@index([email], type: BTree)
}

model PrayerType {
  id          Int          @id @default(autoincrement())
  publicId    String       @unique @default(uuid()) @db.Uuid
  name        String       @db.VarChar(127)
  prayerTimes PrayerTime[]
}

model PrayerCall {
  id          Int          @id @default(autoincrement())
  publicId    String       @unique @default(uuid()) @db.Uuid
  name        String       @db.VarChar(127)
  prayerTimes PrayerTime[]
}

model PrayerTime {
  id             Int          @id @default(autoincrement())
  publicId       String       @unique @default(uuid()) @db.Uuid
  prayerType     PrayerType   @relation(fields: [prayerTypeId], references: [id])
  prayerTypeId   Int
  prayerCall     PrayerCall   @relation(fields: [prayerCallId], references: [id])
  prayerCallId   Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  time           DateTime     @db.Timestamp()
}

model RefreshToken {
  id       Int    @id @default(autoincrement())
  username String @unique @db.Text
  jti      String @unique @db.Uuid
}
